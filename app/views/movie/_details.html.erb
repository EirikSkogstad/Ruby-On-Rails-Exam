<div id="movie" class="row">
  <div class="col s12">
    <h1 class="title center-align"><%= @Movie["Title"] %></h1>
    <div class="col m6">
      <img class="right" src="<%= @Movie["Poster"] %>" alt="">
    </div>
    <div class="col m6">
      <p><i class="material-icons yellow-text">star_rate</i><%= @Movie['imdbRating'] %>/10</p>
      <p><%= @Movie['Plot'] %></p>
    </div>
  </div>
</div>
